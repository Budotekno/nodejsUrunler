
<br>


<div class="container">

    <h2>
        <b>Kullanıcı Listesi</b>
    </h1>
    <br>

    
    <div class="row">
        
        <div class="col-md-8">
            <a href="/adminYeniKullanici" class="btn btn-success">Yeni Kullanıcı</a>
        </div>
        <div class="col-md-4">

            <form action="/adminKullaniciAra" method="post">
                <div class="input-group mb-3">
                    <input type="text" class="form-control" placeholder="Kullanıcı adını yazınız..." name="aranacakKelime"  aria-describedby="basic-addon1">
                    <button type="submit" class="input-group-text" id="basic-addon1">Ara</button>
                  </div>
            </form>

          
          
        </div>

    </div>

    <% if (data==0) { %>
        <div class="alert alert-danger" role="alert">
            Aradığınız kelime bulunamamıştır. Lütfen tekrardan deneyiniz!
          </div> 
    <% } %>


    <% if (data!=0) { %>

        <table class="table table-striped">
            <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Kullanıcı Adı</th>
            <th scope="col">Şifre</th>
           
            <th scope="col">Sil</th>
            <th scope="col" >Güncelle</th>
            
          </tr>
        </thead>
        <tbody>
        
            <% let a =1 %> 
            <% data.forEach(i => { %>
         
                <tr>
                    <th scope="row"><%= a %>  </th>
                    <td><%= i.kullaniciAdi %> </td>
                    <td>
                        <% for( let index = 0; index < i.sifre.length; index++ ) { %>
                            <span>*</span>
                        <% } %>
                    <td>
                        <a class="btn btn-danger" href="/adminKullaniciSil/<%= i.id %> ">Sil</a>
                    </td>
                    <td>
                        <a class="btn btn-warning" href="/adminKullaniciEditGet/<%= i.id%>">Güncelle</a>
                    </td>
                   
                  </tr>
    
                  <% a++ %> 
            
            <% }) %>
         
          
          
        </tbody>
        
        </table>
     
    <% } %>

</div>

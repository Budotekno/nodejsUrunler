  <!-- Open Content -->
  <section class="bg-light">
    <div class="container pb-5">
        <div class="row">
            <div class="col-lg-5 mt-5">
                <div class="card mb-3">
                    <img class=" img-fluid" src="<%= bulunanUrun.img %> " id="product-detail">
                </div>
                <div class="row">
                    <!--Start Controls-->
                    <div class="col-1 align-self-center">
                        <a href="#multi-item-example" role="button" data-bs-slide="prev">
                            <i class="text-dark fas fa-chevron-left"></i>
                            <span class="sr-only">Previous</span>
                        </a>
                        
                    </div>
                    <!--End Controls-->
                    <!--Start Carousel Wrapper-->
                    <div id="multi-item-example" class="col-10 carousel slide carousel-multi-item" data-bs-ride="carousel">
                        <!--Start Slides-->
                        <div class="carousel-inner product-links-wap" role="listbox">

                            <!--First slide-->
                            <div class="carousel-item active">
                                <div class="row">
                                    <div class="col-4">
                                        <a href="#">
                                            <img src="<%= bulunanUrun.img %>" width="100" height="100" >
                                        </a>
                                    </div>
                                    <div class="col-4">
                                        <a href="#">
                                            <img width="100" height="100" src="<%= bulunanUrun.img1 %> ">
                                        </a>
                                    </div>
                                    <div class="col-4">
                                        <a href="#">
                                            <img width="100" height="100" src="<%= bulunanUrun.img2 %> " >
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <!--/.First slide-->

                            <!--Second slide-->
                            <div class="carousel-item">
                                <div class="row">
                                    <div class="col-4">
                                        <a href="#">
                                            <img width="100" height="100" src="<%= bulunanUrun.img3 %> ">
                                        </a>
                                    </div>
                                    <div class="col-4">
                                        <a href="#">
                                            <img width="100" height="100" src="<%= bulunanUrun.img4 %> ">
                                        </a>
                                    </div>
                                    <div class="col-4">
                                        <a href="#">
                                            <img width="100" height="100" src="<%= bulunanUrun.img5 %> ">
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <!--/.Second slide-->

                           
                        </div>
                        <!--End Slides-->
                    </div>
                    <!--End Carousel Wrapper-->
                    <!--Start Controls-->
                    <div class="col-1 align-self-center">
                        <a href="#multi-item-example" role="button" data-bs-slide="next">
                            <i class="text-dark fas fa-chevron-right"></i>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                    <!--End Controls-->
                </div>
            </div>
            <!-- col end -->
            <div class="col-lg-7 mt-5">

                <table class="table table-striped">
                    <thead>
                      <tr>
                        <th scope="col">Fiyatı </th>
                        <th scope="col">: </th>
                        <th scope="col"> <%= bulunanUrun.fiyat %> ₺ </th>
                        
                      </tr>
                    </thead>

                    <tbody>
                      <tr>
                        <th scope="row">Marka</th>
                        <th scope="col">: </th>

                        <td scope="row"> <%= bulunanUrun.marka %></td>
                      </tr>

                      <tr>
                        <th scope="row">Model</th>
                        <th scope="col">: </th>

                        <td scope="row"><%= bulunanUrun.model%></td>
                      </tr>

                      <tr>
                        <th scope="row">İşletim Sistemi</th>
                        <th scope="col">: </th>

                        <td scope="row"><%= bulunanUrun.ısletimSistemi%></td>
                      </tr>

                      <tr>
                        <th scope="row">Dahili Hafıza</th>
                        <th scope="col">: </th>

                        <td scope="row"><%= bulunanUrun.dahiliHafiza%></td>
                      </tr>
                      
                      <tr>
                        <th scope="row">Ekran Boyutu</th>
                        <th scope="col">: </th>

                        <td scope="row"><%= bulunanUrun.ekranBoyutu%></td>
                      </tr>

                      <tr>
                        <th scope="row">Ram Bellek</th>
                        <th scope="col">: </th>

                        <td scope="row"><%= bulunanUrun.ramBellek%></td>
                      </tr>

                      <tr>
                        <th scope="row">Arka Kamera</th>
                        <th scope="col">: </th>

                        <td scope="row"><%= bulunanUrun.arkaKamera%></td>
                      </tr>

                      <tr>
                        <th scope="row">Ön Kamera</th>
                        <th scope="col">: </th>

                        <td scope="row"><%= bulunanUrun.onKamera%></td>
                      </tr>

                      <tr>
                        <th scope="row">Renk</th>
                        <th scope="col">: </th>

                        <td scope="row"><%= bulunanUrun.renk%></td>
                      </tr>

                      <tr>
                        <th scope="row">Garanti</th>
                        <th scope="col">: </th>

                        <td scope="row"><%= bulunanUrun.garanti%></td>
                      </tr>

                      <tr>
                        <th scope="row">Durumu</th>
                        <th scope="col">: </th>

                        <td scope="row"><%= bulunanUrun.durumu%></td>
                      </tr> 
                     
                    </tbody>
                  </table>


               
            </div>
        </div>
    </div>
</section>
